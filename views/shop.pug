<!doctype html>
html 
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
		title #{title}
	body 
		nav.navbar.navbar-expand-lg.navbar-light.bg-light
			.container-fluid
				a.navbar-brand(href='/')
					img.d-inline-block.align-text-top(src='https://www.pngitem.com/pimgs/m/178-1783030_online-shopping-logo-png-transparent-png.png', alt='', width='30', height='30')
					|  Shop
				button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
					span.navbar-toggler-icon
				#navbarNav.collapse.navbar-collapse
					ul.navbar-nav
						li.nav-item
							a.nav-link.active(aria-current='page', href='/') Home
						li.nav-item
							a.nav-link(href='/admin/add-product') Add Product
		.container
			.row
				each product in products
					.col-sm-12.col-md-6.col-lg-4 
						.card 
							.card-header
								.card-title #{product.title}
							
		script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')
