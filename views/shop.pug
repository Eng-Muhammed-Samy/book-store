extends layouts/main-layout.pug  
block content
		.container
			if products.length > 0
				.row.justify-content-center
					each product in products
						.col-sm-12.col-md-6.col-lg-3.mt-5
							.card.shadow-lg.bg-dark(width="15rem") 
								.card-header 
									.card-title.my-1.text-center.fs-5.fw-bold.text-light #{product.title}
								img.card-img-top(src="https://media.wired.com/photos/5be4cd03db23f3775e466767/master/pass/books-521812297.jpg",height="180px" alt="book")
								.card-body
									.card-text.my-1 Lorem ipsum dolor sit amet consectetur adipisicing elit. Omnis voluptas 
									a.btn.btn-outline-light.my-1(href="#") Add To Cart
			else 
				.row 
					h4.text-center.text-warning.mt-5 Book Store Is Empty
